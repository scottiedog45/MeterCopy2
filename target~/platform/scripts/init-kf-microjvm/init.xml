<project name="kfInitMicroJvm">

	<import file="${scripts.dir}/extension-init.xml" />
	
	<!-- Add KF in the soar bootclasspath -->
	<target name="init/kf/soar" extensionOf="init/execution" if="execSOAR">
		<fail unless="microjvm.dir"/>
		<augment id="init.soar.bootclasspath">
			<fileset dir="${microjvm.dir}/javaLibs" includes="kf-*.jar"/>
		</augment>
		<augment id="init.requires">
			<string value="ej.kf.DeadFeatureException"/>
		</augment>
	</target>
	
</project>