<project name="lgap-mockup-s3-init">

	<import file="${scripts.dir}/extension-init.xml" />

	<!-- Add the mockup JAR in the simulator classpath. -->
	<target name="init/lgap-mockup-s3" extensionOf="init/execution" if="onS3">
		<augment id="hil.main.classpath">
			<fileset dir="${platform.dir}/mocks" includes="mocklgap-mockup.jar"/>
		</augment>
	</target>

</project>