<project name="kfInitS3">

	<dirname property="ant.dir.kfInitS3" file="${ant.file.kfInitS3}"/>
	<import file="${ant.dir.kfInitS3}/../extension-init.xml" />
	
	<target name="init/kf/s3" extensionOf="init/execution" if="onS3">
		<fail unless="s3.libs.dir"/>
		<!-- 
			Augment the application classpath with the KF library for Simulator. 
			It is required if "Emb Characteristics" option is enabled and KF not in the application classpath. 
			Note: SOAR is still executed with KF emb library in boot classpath. 
		-->
		<augment id="init.application.classpath">
			<fileset dir="${vm.dir}/javaLibs" includes="kf-*.jar" />
		</augment>		
	</target>
	
</project>